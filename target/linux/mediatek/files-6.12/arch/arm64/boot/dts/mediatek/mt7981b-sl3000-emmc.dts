/dts-v1/;
#include <dt-bindings/interrupt-controller/arm-gic.h>
#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>
#include "mediatek/mt7981.dtsi"

/ {
    compatible = "sl,3000-emmc", "mediatek,mt7981";
    model = "SL-3000 eMMC bootstrap version";

    chosen {
        bootargs = "console=ttyS0,115200n1 earlycon=uart8250,mmio32,0x11002000 root=PARTLABEL=rootfs rootwait rootfstype=squashfs,f2fs";
    };

    memory {
        device_type = "memory";
        reg = <0x0 0x40000000 0x0 0x40000000>; /* 1GB RAM */
    };
};

&uart0 {
    status = "okay";
};

&mmc0 {
    status = "okay";

    partitions {
        compatible = "fixed-partitions";
        #address-cells = <2>;
        #size-cells = <2>;

        partition@0 {
            label = "kernel";
            reg = <0x0 0x0 0x0 0x2000000>; /* 32MB */
        };

        partition@2000000 {
            label = "rootfs";
            reg = <0x0 0x2000000 0x0 0x20000000>; /* 512MB */
        };

        partition@22000000 {
            label = "rootfs_data";
            reg = <0x0 0x22000000 0x1 0x00000000>; /* 4GB */
        };

        partition@122000000 {
            label = "docker";
            reg = <0x0 0x122000000 0x0 0xEE0000000>; /* 60GB */
        };

        partition@522000000 {
            label = "swap";
            reg = <0x0 0x522000000 0x0 0x80000000>; /* 2GB */
        };

        partition@5a2000000 {
            label = "data";
            reg = <0x0 0x5A2000000 0x0 0xE40000000>; /* ~61GB */
        };
    };
};

&eth {
    status = "okay";

    gmac1: mac@1 {
        phy-mode = "2500base-x";
        fixed-link {
            speed = <2500>;
            full-duplex;
        };
    };

    mdio: mdio-bus {
        #address-cells = <1>;
        #size-cells = <0>;

        switch@1f {
            compatible = "mediatek,mt7531";
            reg = <0x1f>;

            ports {
                #address-cells = <1>;
                #size-cells = <0>;

                port@0 { reg = <0>; label = "lan1"; };
                port@1 { reg = <1>; label = "lan2"; };
                port@2 { reg = <2>; label = "lan3"; };
                port@3 { reg = <3>; label = "lan4"; };
                port@4 { reg = <4>; label = "wan"; };

                port@6 {
                    reg = <6>;
                    label = "cpu";
                    ethernet = <&gmac1>;
                    phy-mode = "2500base-x";
                    fixed-link {
                        speed = <2500>;
                        full-duplex;
                    };
                };
            };
        };
    };
};

&pio {
    leds {
        compatible = "gpio-leds";
        statusred   { label = "red:status";   gpios = <&pio 10 GPIO_ACTIVE_HIGH>; };
        statusgreen { label = "green:status"; gpios = <&pio 11 GPIO_ACTIVE_HIGH>; };
        statusblue  { label = "blue:status";  gpios = <&pio 12 GPIO_ACTIVE_HIGH>; };
    };

    gpio-keys {
        compatible = "gpio-keys";
        reset {
            label = "reset";
            gpios = <&pio 1 GPIO_ACTIVE_LOW>;
            linux,code = <KEY_RESTART>;
        };
    };
};
