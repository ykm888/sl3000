/dts-v1/;

/* DTS for SL3000 EMMC based on MT7981 */

#include <dt-bindings/interrupt-controller/arm-gic.h>
#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>

#include "mt7981-rfb.dts"

/ {
    compatible = "sl,sl3000-emmc", "mediatek,mt7981";
    model = "SL 3000 EMMC";

    chosen {
        bootargs = "console=ttyS0,115200n1 earlycon=uart8250,mmio32,0x11002000";
    };

    memory {
        device_type = "memory";
        reg = <0x0 0x40000000 0x0 0x40000000>; /* 1GB RAM */
    };
};

&uart0 {
    status = "okay";
};

&mmc0 {
    status = "okay";
    /* 分区由 mk 的 ptgen/GPT 管理，不在 DTS 固定定义 */
};

&eth {
    status = "okay";

    gmac1: ethernet@1 {
        phy-mode = "2500base-x";
        fixed-link {
            speed = <2500>;
            full-duplex;
        };
    };

    mdio: mdio-bus {
        #address-cells = <1>;
        #size-cells = <0>;

        switch@1f {
            compatible = "mediatek,mt7531";
            reg = <0x1f>;

            ports {
                #address-cells = <1>;
                #size-cells = <0>;

                port@0 {
                    reg = <0>;
                    label = "lan1";
                };

                port@1 {
                    reg = <1>;
                    label = "lan2";
                };

                port@2 {
                    reg = <2>;
                    label = "lan3";
                };

                port@3 {
                    reg = <3>;
                    label = "lan4";
                };

                port@4 {
                    reg = <4>;
                    label = "wan";
                };

                port@6 {
                    reg = <6>;
                    label = "cpu";
                    ethernet = <&gmac1>;
                    phy-mode = "2500base-x";
                    fixed-link {
                        speed = <2500>;
                        full-duplex;
                    };
                };
            };
        };
    };
};

&pio {
    leds {
        compatible = "gpio-leds";

        statusred {
            label = "red:status";
            gpios = <&pio 10 GPIO_ACTIVE_HIGH>;
            default-state = "off";
        };

        statusgreen {
            label = "green:status";
            gpios = <&pio 11 GPIO_ACTIVE_HIGH>;
            default-state = "off";
        };

        statusblue {
            label = "blue:status";
            gpios = <&pio 12 GPIO_ACTIVE_HIGH>;
            default-state = "off";
        };
    };

    gpio-keys {
        compatible = "gpio-keys";

        reset {
            label = "reset";
            gpios = <&pio 1 GPIO_ACTIVE_LOW>;
            linux,code = <KEY_RESTART>;
            debounce-interval = <50>;
        };
    };
};
