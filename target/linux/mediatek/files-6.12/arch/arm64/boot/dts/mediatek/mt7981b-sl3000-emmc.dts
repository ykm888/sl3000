/dts-v1/;

#include "mt7981b.dtsi"
#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>
#include <dt-bindings/leds/common.h>

/ {
    compatible = "sl,3000-emmc", "mediatek,mt7981b";
    model = "SL-3000 eMMC Router";

    #address-cells = <2>;
    #size-cells = <2>;

    aliases {
        serial0 = &uart0;
        mmc0 = &mmc0;
        ethernet0 = &gmac0;
        ethernet1 = &gmac1;

        led-boot     = &led_green;
        led-running  = &led_green;
        led-failsafe = &led_red;
        led-upgrade  = &led_blue;
    };

    chosen {
        stdout-path = "serial0:115200n8";
        bootargs = "console=ttyS0,115200n1 earlycon=uart8250,mmio32,0x11002000 root=PARTLABEL=rootfs rootwait rootfstype=squashfs,f2fs";
    };

    memory@40000000 {
        device_type = "memory";
        reg = <0x0 0x40000000 0x0 0x40000000>; /* 1GB */
    };

    /* 固定 3.3V 电源 */
    reg_3p3v: regulator-3p3v {
        compatible = "regulator-fixed";
        regulator-name = "fixed-3.3v";
        regulator-min-microvolt = <3300000>;
        regulator-max-microvolt = <3300000>;
        regulator-always-on;
        regulator-boot-on;
    };

    /* LED */
    leds {
        compatible = "gpio-leds";

        led_red: led-red {
            label = "red:status";
            color = <LED_COLOR_ID_RED>;
            function = LED_FUNCTION_STATUS;
            gpios = <&pio 10 GPIO_ACTIVE_HIGH>;
            default-state = "off";
        };

        led_green: led-green {
            label = "green:status";
            color = <LED_COLOR_ID_GREEN>;
            function = LED_FUNCTION_STATUS;
            gpios = <&pio 11 GPIO_ACTIVE_HIGH>;
            linux,default-trigger = "heartbeat";
        };

        led_blue: led-blue {
            label = "blue:status";
            color = <LED_COLOR_ID_BLUE>;
            function = LED_FUNCTION_STATUS;
            gpios = <&pio 12 GPIO_ACTIVE_HIGH>;
            default-state = "off";
        };
    };

    /* reset 按键 */
    gpio-keys {
        compatible = "gpio-keys";

        reset {
            label = "reset";
            gpios = <&pio 1 GPIO_ACTIVE_LOW>;
            linux,code = <KEY_RESTART>;
            debounce-interval = <50>;
        };
    };
};

/* UART0 */
&uart0 {
    status = "okay";
};

/* eMMC 控制器 */
&mmc0 {
    bus-width = <8>;
    non-removable;
    cap-mmc-highspeed;
    mmc-hs200-1_8v;
    max-frequency = <50000000>;

    vmmc-supply = <&reg_3p3v>;
    vqmmc-supply = <&reg_3p3v>;

    status = "okay";
};

/* 以太网 */
&eth {
    status = "okay";

    gmac0: mac@0 {
        compatible = "mediatek,eth-mac";
        reg = <0>;
        phy-mode = "2500base-x";
        fixed-link {
            speed = <2500>;
            full-duplex;
        };
    };

    gmac1: mac@1 {
        compatible = "mediatek,eth-mac";
        reg = <1>;
        phy-mode = "2500base-x";
        fixed-link {
            speed = <2500>;
            full-duplex;
        };
    };
};

/* GPIO 控制器 */
&pio {
    status = "okay";
};