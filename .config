############################################
# Target: SL3000-EMMC (Official Aligned)
############################################
CONFIG_TARGET_mediatek=y
CONFIG_TARGET_mediatek_filogic=y
CONFIG_TARGET_mediatek_filogic_DEVICE_sl3000-emmc=y
CONFIG_TARGET_ROOTFS_SQUASHFS=y

######################################
# 工具链与系统优化
######################################
CONFIG_DEVEL=y
CONFIG_BUILD_LOG=y
CONFIG_CCACHE=y
CONFIG_GCC_USE_LIBQUADMATH=n
CONFIG_STRIP_KERNEL_EXPORTS=y
CONFIG_USE_MKLIBS=y

######################################
# 核心网络与硬件加速
######################################
CONFIG_PACKAGE_kmod-nft-offload=y
CONFIG_PACKAGE_kmod-mtk-ppe=y
CONFIG_PACKAGE_kmod-nft-bridge=y
CONFIG_PACKAGE_kmod-mtk-hnat=y
CONFIG_PACKAGE_kmod-mt7981-wed=y

######################################
# 基础系统
######################################
CONFIG_PACKAGE_base-files=y
CONFIG_PACKAGE_busybox=y
CONFIG_PACKAGE_dnsmasq-full=y
CONFIG_PACKAGE_dropbear=y
CONFIG_PACKAGE_firewall4=y
CONFIG_PACKAGE_fstools=y
CONFIG_PACKAGE_block-mount=y
CONFIG_PACKAGE_netifd=y
CONFIG_PACKAGE_odhcp6c=y
CONFIG_PACKAGE_odhcpd-ipv6only=y
CONFIG_PACKAGE_ppp=y
CONFIG_PACKAGE_ppp-mod-pppoe=y
CONFIG_PACKAGE_procd=y
CONFIG_PACKAGE_uci=y
CONFIG_PACKAGE_uclient-fetch=y
CONFIG_PACKAGE_urandom-seed=y
CONFIG_PACKAGE_urngd=y
CONFIG_PACKAGE_ca-bundle=y
CONFIG_PACKAGE_logd=y

######################################
# LuCI (带中文支持)
######################################
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-theme-bootstrap=y
CONFIG_PACKAGE_luci-compat=y
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y

######################################
# WiFi (MT7981) & 交换机
######################################
CONFIG_PACKAGE_kmod-mt76=y
CONFIG_PACKAGE_kmod-mt7981-firmware=y
CONFIG_PACKAGE_mt7981-wo-firmware=y
CONFIG_PACKAGE_kmod-mt7530=y
CONFIG_PACKAGE_kmod-dsa=y
CONFIG_PACKAGE_kmod-dsa-mt7530=y

######################################
# 存储 (eMMC)
######################################
CONFIG_PACKAGE_kmod-mmc=y
CONFIG_PACKAGE_kmod-mmc-mtk=y
CONFIG_PACKAGE_kmod-fs-ext4=y
CONFIG_PACKAGE_kmod-fs-btrfs=y
CONFIG_PACKAGE_kmod-fs-f2fs=y
CONFIG_PACKAGE_kmod-dm=y

######################################
# LED / 按键 / NVMEM / 监控 / pstore
######################################
CONFIG_PACKAGE_kmod-leds-gpio=y
CONFIG_PACKAGE_kmod-button-hotplug=y
CONFIG_PACKAGE_kmod-nvmem=y
CONFIG_PACKAGE_kmod-nvmem-mtk-efuse=y
CONFIG_PACKAGE_kmod-hwmon-core=y
CONFIG_PACKAGE_kmod-hwmon-mtk=y
CONFIG_PACKAGE_kmod-pstore=y
CONFIG_PACKAGE_kmod-pstore-ram=y

######################################
# Passwall2 & Shadowsocks/Xray
######################################
CONFIG_PACKAGE_luci-app-passwall2=y
CONFIG_PACKAGE_ip-full=y
CONFIG_PACKAGE_dns2socks=y
CONFIG_PACKAGE_ipt2socks=y
CONFIG_PACKAGE_microsocks=y
CONFIG_PACKAGE_kmod-tun=y
CONFIG_PACKAGE_xray-core=y
CONFIG_PACKAGE_shadowsocks-libev-ss-local=y
CONFIG_PACKAGE_shadowsocks-libev-ss-redir=y
CONFIG_PACKAGE_shadowsocks-libev-ss-server=y
CONFIG_PACKAGE_shadowsocks-libev-ss-tunnel=y
CONFIG_PACKAGE_libustream-openssl=y
CONFIG_PACKAGE_wpad-openssl=y
CONFIG_PACKAGE_libev=y
CONFIG_PACKAGE_liblzma=y

######################################
# Docker & 容器化支持
######################################
CONFIG_PACKAGE_dockerd=y
CONFIG_PACKAGE_docker=y
CONFIG_PACKAGE_docker-compose=y
CONFIG_PACKAGE_luci-app-dockerman=y
CONFIG_PACKAGE_kmod-fs-overlay=y
CONFIG_PACKAGE_kmod-veth=y
CONFIG_PACKAGE_kmod-br-netfilter=y

######################################
# 环境工具
######################################
CONFIG_PACKAGE_uboot-envtools=y
CONFIG_PACKAGE_fitblk=y
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_vim=y
CONFIG_PACKAGE_curl=y
CONFIG_PACKAGE_wget=y
CONFIG_PACKAGE_ethtool=y
CONFIG_PACKAGE_irqbalance=y
CONFIG_PACKAGE_tcpdump-mini=y

######################################
# 禁用冲突/无关项
######################################
# 无 USB 控制器
CONFIG_PACKAGE_kmod-usb2=n
CONFIG_PACKAGE_kmod-usb3=n
CONFIG_PACKAGE_kmod-usb-storage=n
CONFIG_PACKAGE_kmod-usb-storage-uas=n
CONFIG_PACKAGE_kmod-usb-ledtrig-usbport=n

# 无声卡 / 视频
CONFIG_PACKAGE_kmod-sound-core=n
CONFIG_PACKAGE_kmod-video-core=n

# BusyBox 精简
CONFIG_BUSYBOX_CONFIG_PAM=n
CONFIG_BUSYBOX_CONFIG_TIRPC=n
